<%= simple_form_for(kitty, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name, :class=>"rand-id"%>
    <p class="rand-id " style="text-align: center; font-size: 20px; color: #ef51d2;"> CLICK HERE TO GENERATE KEY  </p>
    <%= f.input :public_key  %>



    <%= f.input :address %>
    <%= f.input :price, input_html: { value: kitty.price } %>
    <%= f.button :submit, :class=>"teach-btn btn button-landing sticky-bottom sweet-alert-demo" %>
  </div>

<% end %>
